# Every morning at 3:00 AM -- run the report scheduler
0 3 * * * root /usr/bin/php /usr/lib64/xdmod/report_schedule_manager.php >/dev/null

<% if scope.lookupvar('xdmod::enable_update_check') -%>
0 1 1 * * root /usr/lib/xdmod/update_check.php >/dev/null
<% end -%>

# Shred and ingest:
<%- if scope['xdmod::shredder_command_real'].is_a?(String) -%>
0 1 * * * root <%= scope.lookupvar('xdmod::shredder_command_real') %> && /usr/bin/xdmod-ingestor --quiet
<%- else -%>
<%- scope['xdmod::shredder_command_real'].each_with_index do |cmd, i| -%>
0 <%= 1 + i %> * * * root <%= cmd %> && /usr/bin/xdmod-ingestor --quiet
<%- end -%>
<%- end -%>
